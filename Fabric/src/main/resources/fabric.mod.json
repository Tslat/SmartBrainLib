{
    "schemaVersion": 1,
    "id": "smartbrainlib",
    "version": "${version}",
  
    "name": "SmartBrainLib",
    "description": "A library mod for smarter Brains and easier usage of the Brain system.",
    "authors": [
      "Tslat"
    ],
    "contact": {
      "homepage": "https://www.curseforge.com/minecraft/mc-mods/smartbrainlib",
      "sources": "https://github.com/Tslat/SmartBrainLib"
    },
  
    "license": "MPL-2.0",
    "icon": "logo.png",
  
    "environment": "*",
    "entrypoints": {
      "main": [
        "net.tslat.smartbrainlib.SmartBrainLib"
      ],
      "client": [
        "net.tslat.smartbrainlib.example.boilerplate.SBLClient"
      ]
    },
    "mixins": [
      "smartbrainlib.mixins.json"
    ],
    "accessWidener": "smartbrainlib.accesswidener",
  
    "depends": {
      "fabricloader": ">=0.14",
      "fabric": "*",
      "minecraft": "1.19.x",
      "java": ">=17"
    },
    "suggests": {
      "another-mod": "*"
    },
    "custom": {
      "lithium:options": {
	"mixin.ai.task.memory_change_counting": false
      }
    }
  }
  
